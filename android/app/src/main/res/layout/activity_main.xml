<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cert password"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/certificate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Certificate"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/key"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Private key"
        android:importantForAutofill="no"
        android:inputType="text" />

    <EditText
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Content"
        android:importantForAutofill="no"
        android:inputType="text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/filldata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill test data" />

        <Button
            android:id="@+id/getkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get private key" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/signpfx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign using PFX" />

        <Button
            android:id="@+id/signkey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign using key" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Result"
        android:textIsSelectable="true" />

</LinearLayout>
